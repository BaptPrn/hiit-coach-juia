<div class="container">
  <%= link_to "Revenir à l'accueil et générer un tabata", '/', {class: "btn btn-primary"} %>
</div>

<div class="text-center">
  <h1>Liste des exercices proposés (<%= @exercises.count%>)  </h1>
</div>

<div class="container">

  <div class="row">
    <div class="text-center">
      <h2>Cardio</h2>
    </div>
    <% @exercises.select{|exo| exo[:exercise_type] == 'Cardio'}.each do |exercise|  %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= render 'exercise_card', exercise: exercise %>
    </div>
  <% end %>
  </div>

  <div class="row">
    <div class="text-center">
      <h2>Abdos</h2>
    </div>
    <% @exercises.select{|exo| exo[:exercise_type] == 'Abdos'}.each do |exercise|  %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= render 'exercise_card', exercise: exercise %>
    </div>
  <% end %>
  </div>


  <div class="row">
    <div class="text-center">
      <h2>Pecs</h2>
    </div>
    <% @exercises.select{|exo| exo[:exercise_type] == 'Pecs'}.each do |exercise|  %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= render 'exercise_card', exercise: exercise %>
    </div>
  <% end %>
  </div>


  <div class="row">
    <div class="text-center">
      <h2>Dos</h2>
    </div>
    <% @exercises.select{|exo| exo[:exercise_type] == 'Dos'}.each do |exercise|  %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= render 'exercise_card', exercise: exercise %>
    </div>
  <% end %>
  </div>

  <div class="row">
    <div class="text-center">
      <h2>Epaules / Tris</h2>
    </div>
      <% (@exercises.select{|exo| exo[:exercise_type] == 'Epaules'} + @exercises.select{|exo| exo[:exercise_type] == 'Tris'} + @exercises.select{|exo| exo[:exercise_type] == 'Pecs/abdos'}).each do |exercise| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= render 'exercise_card', exercise: exercise %>
    </div>
  <% end %>
  </div>

</div>

<%= link_to "Créer un nouvel exercice", new_exercise_path, {class: "btn btn-primary"} %>
